<div class='container pb-5'>
   <div class="row pb-5">
    <div class='col-md-12'>
     <div class="row">
      <div class="col-md-5 mx-auto mt-5 p-5 text-left card">
      <h2><strong>ログイン(管理者)</strong></h2>

      <%= form_with model: @admin, url: admin_session_path do |f| %>
      <dl>
        <div class="field">
          <dt><%= f.label :email, "メールアドレス" %></dt>
          <dd><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-12" %></dd>
        </div>

        <div class="field">
          <dt><%= f.label :password, "パスワード" %></dt>
          <dd><%= f.password_field :password, autocomplete: "password", class:"col-12" %></dd>
        </div>
      </dl>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-outline-info btn-block" %>
        </div>
      <% end %>
      </div>
     </div>
    </div>
   </div>
</div>