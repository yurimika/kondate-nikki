<div class='container'>
  <div class=“row”>
   <div class='col-md-12'>
     <div class="row">
      <div class="col-md-5 mx-auto mt-5 p-5 text-left card">
        <p class="text-danger"><%= flash[:alert] %></p>

        <h2><strong>ログイン</strong></h2>

         <%= form_with model: @user, url: user_session_path do |f| %>
         <dl>
            <dt><%= f.label :email,"メールアドレス" %></dt>
            <dd><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-10" %></dd>


            <dt><%= f.label :password,"パスワード" %></dt>
            <dd><%= f.password_field :password, autocomplete: "current-password", class:"col-10" %></dd>

         </dl>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me,"ログインを記憶する" %>
            </div>
          <% end %>

          <div class="actions row">
            <div class="col-10 mb-3">
             <%= f.submit "ログイン", class: "btn btn-outline-info btn-block" %>
            </div>
          </div>
        <% end %>


        <h4>会員登録がお済みでない方</h4>
            <%= link_to "こちら",  new_user_registration_path %><span>から会員登録を行ってください。</span>

       </div>
      </div>
     </div>
    </div>
  </div>