<div class="container">
  <div class="row mt-4">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>

    <h2><strong>会員情報編集</strong></h2>
    <%= render 'layouts/error_messages', model: @user %>
    <%= form_with model:@user, url:public_user_path do |f| %>
       <div class="form-group mt-5">
            <%= f.label :"ニックネーム" %>
            <%= f.text_field :name %>
       </div>
       <div class="form-group mt-5">
            <%= f.label :"紹介文" %>
            <%= f.text_field :introduction %>
       </div>
        <div class="form-group mt-5">
            <%= f.label :"プロフィール画像" %>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
       </div>

    <div class="row">
      <div class="col-md-8 mt-5">
        <%= f.submit "編集内容を保存", class:"btn btn-outline-success" %>
      </div>
     <% end %>
　  </div>

  </div>
 </div>
</div>