<h1>献立投稿フォーム</h1>

  <%= form_with model: @menu, url: public_menus_path do |f| %>
    <h4>献立画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>一言コメント</h4>
      <%= f.text_area :comment %>
    <h4>日付</h4>
      <%= f.datetime_select :start_time %>

    <div class="check_box">
      <span>タグ</span>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
     <div>
       <%= tag.label do %>
         <%= tag.check_box %>
         <%= tag.text %>
       <% end %>
     </div>
     <% end %>
    </div>

    <h4>主食</h4>
      <%= f.text_field :menu_name_1 %>
    <h4>使用した食材(主食)</h4>
      <%= f.text_area :food_detail_1 %>
    <h4>汁物</h4>
      <%= f.text_field :menu_name_2 %>
    <h4>使用した食材(汁物)</h4>
      <%= f.text_area :food_detail_2 %>
    <h4>主菜</h4>
      <%= f.text_field :menu_name_3 %>
    <h4>使用した食材(主菜)</h4>
      <%= f.text_area :food_detail_3 %>
    <h4>主菜2</h4>
      <%= f.text_field :menu_name_4 %>
    <h4>使用した食材(主菜2)</h4>
      <%= f.text_area :food_detail_4 %>
    <h4>副菜</h4>
      <%= f.text_field :menu_name_5 %>
    <h4>使用した食材(副菜)</h4>
      <%= f.text_area :food_detail_5 %>
    <h4>副菜2</h4>
      <%= f.text_field :menu_name_6 %>
    <h4>使用した食材(副菜2)</h4>
      <%= f.text_area :food_detail_6 %>
    <h4>副菜3</h4>
      <%= f.text_field :menu_name_7 %>
    <h4>使用した食材(副菜3)</h4>
      <%= f.text_area :food_detail_7 %>
    <h4>その他</h4>
      <%= f.text_field :menu_name_8 %>
    <h4>使用した食材(その他)</h4>
      <%= f.text_area :food_detail_8 %>
    <%= f.submit '投稿' %>
  <% end %>
